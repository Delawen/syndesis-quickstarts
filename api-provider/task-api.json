{
  "swagger": "2.0",
  "info": {
    "title": "TaskAPI",
    "description": "Simple API for task management",
    "version": "1.0.0"
  },
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/todo": {
      "post": {
        "summary": "Create Task",
        "description": "Create a new task in the system",
        "operationId": "2",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "A new task in JSON format",
            "schema": {
              "$ref": "#/definitions/Task"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "The newly created task",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          }
        }
      }
    },
    "/todo/{id}": {
      "get": {
        "summary": "Get Task by ID",
        "operationId": "3",
        "responses": {
          "200": {
            "description": "Task for given ID",
            "schema": {
              "$ref": "#/definitions/Todo"
            }
          }
        }
      },
      "delete": {
        "summary": "Delete Task for ID",
        "operationId": "4",
        "responses": {
          "200": {
            "description": "Status Msg",
            "schema": {
              "type": "string"
            }
          },
          "400": {
            "description": "Error Msg",
            "schema": {
              "type": "string"
            }
          }
        }
      },
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "description": "The unique identifier of the task",
          "required": true,
          "type": "integer"
        }
      ]
    }
  },
  "definitions": {
    "Todo": {
      "title": "Root Type for Todo",
      "description": "The root of the Todo type's schema.",
      "type": "object",
      "properties": {
        "id": {
          "format": "int32",
          "type": "integer"
        },
        "task": {
          "type": "string"
        },
        "completed": {
          "type": "boolean"
        }
      },
      "example": "{\n    \"id\": 1,\n    \"task\": \"my task\",\n    \"completed\": false\n}"
    },
    "Task": {
      "title": "Root Type for Task",
      "description": "The root of the Task type's schema.",
      "type": "object",
      "properties": {
        "task": {
          "type": "string"
        }
      },
      "example": "{\n    \"task\": \"my task\"\n}"
    }
  }
}
